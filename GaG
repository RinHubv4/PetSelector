-- Toggle helper function: sliding switch
local function makeSlidingToggle(parent, name, posY)
	local row = New("Frame", {
		Parent = parent,
		Size = UDim2.new(1, -24, 0, 44),
		Position = UDim2.new(0, 12, 0, posY),
		BackgroundTransparency = 1
	})
	local label = New("TextLabel", {
		Parent = row,
		Size = UDim2.new(0.6, 0, 1, 0),
		BackgroundTransparency = 1,
		Text = name,
		TextColor3 = COLOR_TEXT,
		Font = Enum.Font.Gotham,
		TextSize = 14,
		TextXAlignment = Enum.TextXAlignment.Left
	})
	-- sliding switch frame
	local swFrame = New("Frame", {
		Parent = row,
		Size = UDim2.new(0, 74, 0, 30),
		Position = UDim2.new(1, -78, 0, 7),
		BackgroundColor3 = Color3.fromRGB(36, 28, 46)
	})
	New("UICorner", {Parent = swFrame, CornerRadius = UDim.new(0, 14)})
	New("UIStroke", {Parent = swFrame, Thickness = 1, Color = Color3.fromRGB(58, 40, 85)})
	-- knob
	local knob = New("Frame", {
		Parent = swFrame,
		Size = UDim2.new(0, 26, 0, 26),
		Position = UDim2.new(0, 2, 0, 2),
		BackgroundColor3 = Color3.fromRGB(190, 70, 70)
	})
	New("UICorner", {Parent = knob, CornerRadius = UDim.new(1, 0)})
	local state = false

	local function setState(on, instant)
		state = on
		if on then
			local t1 = TweenService:Create(knob, TweenInfo.new(0.22, Enum.EasingStyle.Quart), {Position = UDim2.new(1, -28, 0, 2)})
			local t2 = TweenService:Create(swFrame, TweenInfo.new(0.22, Enum.EasingStyle.Quart), {BackgroundColor3 = Color3.fromRGB(46, 70, 85)})
			t1:Play(); t2:Play()
			TweenService:Create(knob, TweenInfo.new(0.22), {BackgroundColor3 = COLOR_ACCENT_B}):Play()
		else
			local t1 = TweenService:Create(knob, TweenInfo.new(0.22, Enum.EasingStyle.Quart), {Position = UDim2.new(0, 2, 0, 2)})
			local t2 = TweenService:Create(swFrame, TweenInfo.new(0.22, Enum.EasingStyle.Quart), {BackgroundColor3 = Color3.fromRGB(36, 28, 46)})
			t1:Play(); t2:Play()
			TweenService:Create(knob, TweenInfo.new(0.22), {BackgroundColor3 = Color3.fromRGB(190, 70, 70)}):Play()
		end
	end

	-- click toggles; but only cosmetic
	swFrame.InputBegan:Connect(function(input)
		if input.UserInputType.Name == "MouseButton1" or input.UserInputType.Name == "Touch" then
			setState(not state)
			-- small pulse glow when toggled
			local pulse = TweenService:Create(swFrame, TweenInfo.new(0.12), {Size = UDim2.new(0, 78, 0, 34)})
			pulse:Play()
			task.delay(0.12, function() TweenService:Create(swFrame, TweenInfo.new(0.12), {Size = UDim2.new(0, 74, 0, 30)}):Play() end)
		end
	end)

	return {
		Frame = row,
		SetState = setState,
		GetState = function() return state end
	}
end

-- Create sliding toggles (cosmetic)
local t1 = makeSlidingToggle(controlCard, "Freeze Trade", 44)
local t2 = makeSlidingToggle(controlCard, "Auto Accept", 100)
local t3 = makeSlidingToggle(controlCard, "Confirm Lock", 156)

