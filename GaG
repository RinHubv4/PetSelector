local tabs = {"Overview", "Controls", "Logs"}
local tabButtons = {}
local currentTab = "Overview"

local function createTabButton(name)
	local btn = New("TextButton", {
		Parent = menuFrame,
		Size = UDim2.new(1, 0, 0, 44),
		BackgroundColor3 = Color3.fromRGB(29,22,40),
		Text = "  " .. name,
		TextColor3 = Color3.fromRGB(190,190,210),
		Font = Enum.Font.GothamBold,
		TextSize = 14,
		AutoButtonColor = false
	})
	New("UICorner", {Parent = btn, CornerRadius = UDim.new(0, 10)})
	local stroke = New("UIStroke", {Parent = btn, Thickness = 1, Color = Color3.fromRGB(55,40,80)})
	local grad = New("UIGradient", {Parent = btn})
	grad.Color = ColorSequence.new({ColorSequenceKeypoint.new(0, Color3.fromRGB(35,26,50)), ColorSequenceKeypoint.new(1, Color3.fromRGB(26,18,44))})
	btn.MouseEnter:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.12), {BackgroundColor3 = Color3.fromRGB(40,28,60)}):Play()
	end)
	btn.MouseLeave:Connect(function()
		if currentTab == name then
			TweenService:Create(btn, TweenInfo.new(0.12), {BackgroundColor3 = Color3.fromRGB(50,35,70)}):Play()
		else
			TweenService:Create(btn, TweenInfo.new(0.12), {BackgroundColor3 = Color3.fromRGB(29,22,40)}):Play()
		end
	end)

	btn.MouseButton1Click:Connect(function()
		-- visual active state
		for k, b in pairs(tabButtons) do
			TweenService:Create(b, TweenInfo.new(0.14), {BackgroundColor3 = Color3.fromRGB(29,22,40)}):Play()
		end
		TweenService:Create(btn, TweenInfo.new(0.18), {BackgroundColor3 = Color3.fromRGB(50,35,70)}):Play()
		currentTab = name
		-- show content
		for k, p in pairs(panels) do
			p.Visible = (k == name)
			p.ClipsDescendants = true
			p.Position = UDim2.new(0, 0, 0, 0)
		end
	end)
	tabButtons[name] = btn
	return btn
end

-- Create tab buttons
for _, t in ipairs(tabs) do
	createTabButton(t)
end

-- make the first tab look active
