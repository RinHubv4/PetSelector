-- Fake log generator
local logPool = {
	"ðŸ’  You offered: Neon Katana",
	"âš¡ Player accepted your offer",
	"ðŸ”’ Trade locked by partner",
	"ðŸŒ€ You canceled the trade",
	"ðŸ’Ž Player added: Crystal Gem",
	"âœ… Trade confirmed",
	"â— Partner requested more time",
	"ðŸ” Items swapped visually",
	"ðŸ” Auto-Accept toggled on (visual)",
	"â³ Timer extended by partner"
}
local function addLog(text)
	local entry = New("TextLabel", {
		Parent = scroll,
		Size = UDim2.new(1, -6, 0, 28),
		BackgroundTransparency = 1,
		Text = text,
		TextColor3 = Color3.fromRGB(210,210,230),
		Font = Enum.Font.Gotham,
		TextSize = 13,
		TextXAlignment = Enum.TextXAlignment.Left
	})
	New("UICorner", {Parent = entry, CornerRadius = UDim.new(0, 6)})
	-- gentle appear
	entry.TextTransparency = 1
	TweenService:Create(entry, TweenInfo.new(0.22), {TextTransparency = 0}):Play()
end

-- Pre-fill a few logs
for i = 1, 6 do
	addLog(logPool[math.random(1,#logPool)])
end

-- Notifications system (top-right)
local notifFolder = Instance.new("Folder", screenGui)
notifFolder.Name = "Notifications"

local function notify(text, timeVisible)
	timeVisible = timeVisible or 2.6
	local notif = New("Frame", {
		Parent = notifFolder,
		Size = UDim2.new(0, 280, 0, 48),
		Position = UDim2.new(1, -300, 0, 18),
		BackgroundColor3 = Color3.fromRGB(20,14,28)
	})
	New("UICorner", {Parent = notif, CornerRadius = UDim.new(0, 10)})
	New("UIStroke", {Parent = notif, Thickness = 1, Color = Color3.fromRGB(55,30,80)})
	local t = New("TextLabel", {
		Parent = notif,
		Size = UDim2.new(1, -18, 1, 0),
		Position = UDim2.new(0, 12, 0, 0),
		Text = text,
		BackgroundTransparency = 1,
		TextColor3 = Color3.fromRGB(200, 200, 255),
		Font = Enum.Font.Gotham,
		TextSize = 13,
		TextXAlignment = Enum.TextXAlignment.Left
	})
	-- entrance
	notif.Position = UDim2.new(1, 40, 0, 18)
	TweenService:Create(notif, TweenInfo.new(0.26, Enum.EasingStyle.Quad), {Position = UDim2.new(1, -300, 0, 18)}):Play()
	-- auto fade
	task.delay(timeVisible, function()
		TweenService:Create(notif, TweenInfo.new(0.26, Enum.EasingStyle.Quad), {Position = UDim2.new(1, 40, 0, 18), BackgroundTransparency = 1}):Play()
		task.wait(0.26)
		notif:Destroy()
	end)
end

-- Fake trade timer logic (visual)
local fakeTimerSeconds = 0
local timerActive = false
local timerTarget = 0
local timerTickAccumulator = 0

local function startFakeTimer(seconds)
	timerTarget = seconds or 30
	fakeTimerSeconds = timerTarget
	timerActive = true
end

local function stopFakeTimer()
	timerActive = false
	fakeTimerSeconds = 0
	timerLabel.Text = "00:00"
end

-- Simple helper to format time
local function fmtTime(s)
	local mm = math.floor(s / 60)
	local ss = s % 60
	return string.format("%02d:%02d", mm, ss)
end

-- Fake partner detection â€” purely cosmetic (phase through: not in trade â†’ in trade)
local fakeInTrade = false
local fakePartnerName = "SYN-404"

-- Toggle fake trade on double-click header (for demo)
header.InputBegan:Connect(function(input)
	if input.UserInputType.Name == "MouseButton2" then
		-- right-click toggles in-trade simulation
		fakeInTrade = not fakeInTrade
		if fakeInTrade then
			fakePartnerName = "SYN-" .. tostring(math.random(100,999))
			statusText.Text = "Connected: " .. fakePartnerName
			statusText.TextColor3 = COLOR_ACCENT_B
			statusLight.BackgroundColor3 = COLOR_ACCENT_B
			TweenService:Create(statusLight, TweenInfo.new(0.36, Enum.EasingStyle.Sine), {BackgroundColor3 = COLOR_ACCENT_B}):Play()
			startFakeTimer(30)
			notify("Connected to " .. fakePartnerName, 2.8)
		else
			statusText.Text = "Not in Trade"
			statusText.TextColor3 = COLOR_TEXT
			statusLight.BackgroundColor3 = Color3.fromRGB(170,60,60)
			stopFakeTimer()
			notify("Disconnected", 2.2)
		end
	end
end)

-- Periodic fake log generator & notifications
local logTimer = 0
local logInterval = 4.2

-- Run loop
RunService.Heartbeat:Connect(function(dt)
	-- timer tick
	if timerActive then
		timerTickAccumulator = timerTickAccumulator + dt
		if timerTickAccumulator >= 1 then
			timerTickAccumulator = timerTickAccumulator - 1
			if fakeTimerSeconds > 0 then
				fakeTimerSeconds = fakeTimerSeconds - 1
				timerLabel.Text = fmtTime(fakeTimerSeconds)
				-- pulse when below 10s
				if fakeTimerSeconds <= 10 and fakeTimerSeconds > 0 then
					TweenService:Create(timerLabel, TweenInfo.new(0.12), {TextColor3 = COLOR_ACCENT_B}):Play()
					task.delay(0.12, function() TweenService:Create(timerLabel, TweenInfo.new(0.22), {TextColor3 = Color3.fromRGB(200,200,255)}):Play() end)
				end
			else
				-- timer ended â€” create fake confirmation + log
				stopFakeTimer()
				addLog("â± Timer expired â€” auto-check (visual)")
				notify("Timer expired for " .. (fakePartnerName or "partner"), 2.6)
			end
		end
	end

	-- fake log generator while in trade
	if fakeInTrade then
		logTimer = logTimer + dt
		if logTimer >= logInterval then
			logTimer = 0
			local entry = logPool[math.random(1,#logPool)]
			addLog(entry)
			-- occasional notification
			if math.random() < 0.35 then
				notify(entry, 2.2)
			end
		end
	end
end)

-- Entrance animation for the whole root
root.Position = UDim2.new(0.5, -360, -1.2, 0)
root.BackgroundTransparency = 1
TweenService:Create(root, TweenInfo.new(0.6, Enum.EasingStyle.Quart), {Position = UDim2.new(0.5, -360, 0.5, 0), BackgroundTransparency = 0}):Play()

-- Helper: simulate an initial "welcome" notification and a few initial logs
task.delay(0.5, function()
	notify("Rin System Ready â€¢ Cyberpunk Mode", 2.6)
	addLog("System boot sequence complete.")
	addLog("Visual debug: no trade actions will be performed.")
end)

